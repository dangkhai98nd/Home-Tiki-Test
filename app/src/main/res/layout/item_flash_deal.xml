<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="148dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/image_flash_deal"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    
    <TextView
        android:id="@+id/text_price"
        app:layout_constraintStart_toStartOf="@id/image_flash_deal"
        app:layout_constraintEnd_toEndOf="@id/image_flash_deal"
        app:layout_constraintTop_toBottomOf="@id/image_flash_deal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progress_bar_flash_deal"
        app:layout_constraintStart_toStartOf="@id/image_flash_deal"
        app:layout_constraintEnd_toEndOf="@id/image_flash_deal"
        app:layout_constraintTop_toBottomOf="@id/text_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rcBackgroundColor="#fba9ab"
        app:rcProgressColor="#fa434b"
        android:layout_width="0dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/text_progress_bar"
        app:layout_constraintStart_toStartOf="@id/progress_bar_flash_deal"
        app:layout_constraintEnd_toEndOf="@id/progress_bar_flash_deal"
        app:layout_constraintTop_toTopOf="@id/progress_bar_flash_deal"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar_flash_deal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        tools:text="Đã bán 0"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    
    <TextView
        android:id="@+id/text_discount"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:background="@drawable/background_text_discount"
        android:textColor="@android:color/white"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_width="44dp"
        android:layout_height="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>